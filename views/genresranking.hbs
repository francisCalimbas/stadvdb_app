<meta charset="utf-8">
    <title>TABLES</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

{{>navbar}}


<section>

    <div id = "datanames" style = "display:none;">
        {{#each results}}
            <h1 value ="{{this.genre}}">{{this.genre}}</h1>
        {{/each}}
    </div>
    <div id = "datavalue"  style = "display:none;">
        {{#each results}}
            <h1 value ="{{this.Average_Rating}}">{{this.Average_Rating}}</h1>
        {{/each}}
    </div>
   <h1>Top 10 Genres in Terms of Average Movie Rating</h1>
 
<div class ="container mb-3 mt-3"> 
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Genre</th>
                <th>Average Rating</th>
            </tr>
        </thead>
          <tbody>
    {{#each results}}
    
            <tr>
                <td>{{this.genre}}</td>
                <td>{{this.Average_Rating}}</td>
            </tr>
        
    {{/each}}
    </tbody>
    </table>
</div>
    <div class = "container">
        <canvas id ="myChart"></canvas>
    </div>
</section>


