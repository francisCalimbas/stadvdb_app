{{>navbar}}


<section>

    <div id = "datanames" style = "display:none;">
        {{#each results}}
            <h1 value ="{{this.director}}">{{this.director}}</h1>
        {{/each}}
    </div>
    <div id = "datavalue"  style = "display:none;">
        {{#each results}}
            <h1 value ="{{this.movie_cnt}}">{{this.movie_cnt}}</h1>
        {{/each}}
    </div>
   <h1>Top 10 Directors in Terms of Movie Count</h1>
 
<div class ="container mb-3 mt-3"> 
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Director</th>
                <th>Movie Count</th>
            </tr>
        </thead>
          <tbody>
    {{#each results}}
    
            <tr>
                <td>{{this.director}}</td>
                <td>{{this.movie_cnt}}</td>
            </tr>
        
    {{/each}}
    </tbody>
    </table>
</div>
    <div class = "container">
        <canvas id ="myChart"></canvas>
    </div>
</section>


